<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ringtone_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RadioButton
        android:id="@+id/ringtone_pref_dlg_item_radiobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ringtone_pref_dlg_item_radiobtn"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ringtone_pref_dlg_item_rigtone_type_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/ic_ringtone_system" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ringtone_pref_dlg_item_rigtone_type_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ringtone_pref_dlg_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_string"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ringtone_pref_dlg_item_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_string"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
