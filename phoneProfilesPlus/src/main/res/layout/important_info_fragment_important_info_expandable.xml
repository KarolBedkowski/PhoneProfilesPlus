        <com.skydoves.expandablelayout.ExpandableLayout
            android:id="@+id/fragment_important_info_expandable_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:expandable_duration="300"
            app:expandable_isExpanded="true"
            app:expandable_parentLayout="@layout/important_info_fragment_expandable_system_parent"
            app:expandable_secondLayout="@layout/important_info_fragment_expandable_system_second"
            app:expandable_showSpinner="true"
            app:expandable_spinner="@drawable/ic_arrow_down"
            app:expandable_spinner_animate="true"
            app:expandable_spinner_margin="0dp"
            app:expandable_spinner_gravity="end"
            app:expandable_spinner_size="32dp"
            app:expandable_spinner_color="@color/accent"
            />

