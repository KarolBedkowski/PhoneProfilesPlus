<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <RadioButton
        android:id="@+id/profile_pref_dlg_item_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:focusable="false" />

    <RelativeLayout
        android:id="@+id/profile_pref_dlg_item_reLa1"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/profile_pref_dlg_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_default"
            android:contentDescription="@string/profile_preferences_profileIcon"/>

        <LinearLayout
            android:id="@+id/profile_pref_dlg_item_liLa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/profile_pref_dlg_item_icon" >

            <TextView
                android:id="@+id/profile_pref_dlg_item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_name_default"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/profile_pref_dlg_item_indicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_preferences_indicator_height"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_preferences_indicator_image"
                android:scaleType="@integer/profilePrefIndicatorScaleType"
                android:src="@drawable/ic_profile_pref_volume_on" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>