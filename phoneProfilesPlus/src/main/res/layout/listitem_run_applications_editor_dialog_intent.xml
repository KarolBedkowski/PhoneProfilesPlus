<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/run_applications_editor_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="?attr/listViewItemBackground" >

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/run_applications_editor_dlg_item_edit_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/tooltip_options_menu"
        android:src="@drawable/ic_list_item_edit_menu"
        android:focusable="false" />

    <RelativeLayout
        android:id="@+id/run_applications_editor_dlg_item_reLa1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/run_applications_editor_dlg_item_edit_menu"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" >

        <RadioButton
            android:id="@+id/run_applications_editor_dialog_item_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
            android:layout_centerVertical="true"
            android:buttonTint="@color/checkbox_radiobutton_color"
            android:checked="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/run_applications_editor_dialog_item_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/run_applications_editor_dialog_item_radiobutton"
            android:text="@string/empty_string"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>
