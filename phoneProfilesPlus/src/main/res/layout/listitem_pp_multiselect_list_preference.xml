<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pp_multiselect_list_pref_dlg_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">

    <CheckBox
        android:id="@+id/pp_multiselect_list_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/chackBox_radioButton_spacing_for_list_items"
        android:buttonTint="@color/checkbox_radiobutton_color"
        android:checked="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/pp_multiselect_list_pref_dlg_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/pp_multiselect_list_pref_dlg_item_checkbox"
        android:text=""
        android:textSize="16sp" />

</RelativeLayout>
