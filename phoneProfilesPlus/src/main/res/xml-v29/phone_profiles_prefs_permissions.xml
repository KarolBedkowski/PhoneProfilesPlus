<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="categoryPermissions"
    app:title="@string/phone_profiles_pref_category_permissions">

    <Preference
        app:key="permissionsGrantRootPermission"
        app:title="@string/phone_profiles_pref_grantRootPermission"
        app:summary="@string/phone_profiles_pref_grantRootPermission_summary"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget"/>
    <Preference
        app:key="permissionsWriteSystemSettingsPermissions"
        app:title="@string/phone_profiles_pref_writeSystemSettingPermissions"
        app:summary="@string/phone_profiles_pref_writeSystemSettingPermissions_summary"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget"/>

<!--    !!! Required because is not possible to use DrawOverAppsPermissionNotification.showNotification()
        when PPP notificaitonsa are disabled (API 31 restrictions abount app notifications) -->
    <Preference
        app:key="permissionsDrawOverlaysPermissions"
        app:title="@string/phone_profiles_pref_drawOverlaysPermissions"
        app:summary="@string/phone_profiles_pref_drawOverlaysPermissions_summary"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget" />

    <Preference
        app:key="permissionsGrantG1Permission"
        app:title="@string/profile_preferences_types_G1_permission"
        app:summary="@string/important_info_profile_grant"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget"/>

    <Preference
        app:key="applicationLocationPermissionTypeInfo"
        app:title="@string/phone_profiles_pref_applicationLoacationPermissionTypeInfo"
        app:summary="@string/phone_profiles_pref_applicationLoacationPermissionTypeInfo_summary"
        app:widgetLayout="@layout/preference_widget_exclamation_preference"
        app:layout="@layout/mp_preference_material_widget" />

    <Preference
        app:key="permissionsApplicationPermissions"
        app:title="@string/phone_profiles_pref_applicationPermissions"
        app:summary="@string/phone_profiles_pref_applicationPermissions_summary"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget"/>

    <Preference
        app:key="applicationWifiControlInfo"
        app:title="@string/phone_profiles_pref_applicationWifiControlInfo"
        app:summary="@string/phone_profiles_pref_applicationWifiControlInfo_summary"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget" />

    <Preference
        app:key="applicationColorOsWifiBluetoothDialogsInfo"
        app:title="@string/phone_profiles_pref_applicationColorOsWifiBluetoothDialogs"
        app:summary="@string/phone_profiles_pref_applicationColorOsWifiBluetoothDialogsInfo_info"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget" />
    <Preference
        app:key="applicationMIUIWifiBluetoothDialogsInfo"
        app:title="@string/phone_profiles_pref_applicationColorOsWifiBluetoothDialogs"
        app:summary="@string/phone_profiles_pref_applicationMIUIWifiBluetoothDialogsInfo_info"
        app:widgetLayout="@layout/preference_widget_preference_with_subpreferences"
        app:layout="@layout/mp_preference_material_widget" />

</androidx.preference.PreferenceScreen>