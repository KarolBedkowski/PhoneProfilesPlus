<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_icon_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#40000000"
    tools:ignore="Overdraw" >

    <ImageView
        android:id="@+id/widget_icon_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_widget_background_5"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/icon_widget_relLa1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/widget_ripple_background" >

        <ImageView
            android:id="@+id/icon_widget_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_default"
            android:contentDescription="@string/profile_preferences_profileIcon"/>
<!--        android:layout_alignParentTop="true"-->

        <TextView
            android:id="@+id/icon_widget_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon_widget_icon"
            android:autoSizeTextType="uniform"
            android:text="@string/profile_name_default"
            android:gravity="center_horizontal"
            android:maxLines="1"
            tools:ignore="SpUsage"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/widget_icon_not_rounded_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/not_rounded_widget_border"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_icon_rounded_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_widget_border_5"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</FrameLayout>

