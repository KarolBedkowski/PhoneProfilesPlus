    <PreferenceCategory
        app:key="prf_pref_applicationOthers"
        app:title="@string/profile_preferences_category_others"
        app:layout="@layout/mp_preference_category">
        <sk.henrichg.phoneprofilesplus.PPListPreference
            app:title="@string/profile_preferences_applicationEnableGlobalEventsRun"
            app:summary="@string/array_pref_no_change"
